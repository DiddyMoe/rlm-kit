{
  "gateway": {
    "host": "0.0.0.0",
    "port": 8080,
    "repo_path": "/repo/rlm-kit",
    "api_key": "YOUR_API_KEY_HERE"
  },
  "deployment": {
    "mode": "http",
    "cors_origins": ["*"],
    "log_level": "info"
  },
  "security": {
    "require_auth": true,
    "api_key_env_var": "RLM_GATEWAY_API_KEY"
  }
}
